[
  {
    "name": "${container_name}",
    "image": "${docker_image}",
    "cpu": ${cpu_units},
    "memory": ${memory_units},
    "memoryReservation": ${memory_reservation},
    "mountPoints": [
      {
        "SourceVolume": "${container_name}-config",
        "containerPath": "${volume_container_path}"
      }
    ],
    "portMappings": [
      {
        "hostPort": ${host_port},
        "containerPort": ${container_port},
        "protocol": "${protocol}"
      }
    ],
    "logConfiguration": {
      "logDriver": "${log_driver}",
      "options": {
        "awslogs-group": "${container_name}-${cluster_name}",
        "awslogs-region": "${aws_region}"
      }
    }
  }
]